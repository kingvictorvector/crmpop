{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist/server",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true
  },
  "include": [
    "src/server/**/*",
    "src/services/**/*",
    "src/routes/**/*"
  ],
  "exclude": [
    "src/client/**/*",
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts",
    "build",
    "dist"
  ]
} 