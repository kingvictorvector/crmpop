{
  "name": "crmpop",
  "version": "1.0.0",
  "description": "CRM Screen Pop Tool",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon",
    "dev:client": "cd client && npm start",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd client && npm install && npm run build && cp -r build ../build",
    "test": "jest",
    "eject": "react-scripts eject",
    "test-db": "npm run build:server && node dist/test-db.js",
    "test-add": "npm run build:server && node dist/test-add-entry.js",
    "build-and-serve": "npm run build && npm run server",
    "win-clean": "if exist dist rmdir /s /q dist && if exist build rmdir /s /q build",
    "win-build": "npm run win-clean && npm run build && npm run build:server",
    "win-start-dev": "start npm run server && set PORT=3000 && npm start",
    "win-start-prod": "npm run win-build && npm run server"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.11.16",
    "@mui/material": "^5.13.0",
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.6",
    "@types/react-dom": "^18.2.4",
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "mssql": "^10.0.2",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.11.1",
    "react-scripts": "5.0.1",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/mssql": "^9.1.4",
    "@types/papaparse": "^5.3.7",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
